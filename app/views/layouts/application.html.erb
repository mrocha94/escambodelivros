<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <% if signed_in? -%>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
    <% end -%>
  </div>

  <% if flash[:notice] -%>
    <div id="notice.message.alert.alert-info"><%=flash[:notice] %></div>
  <% elsif flash[:warning] -%>
    <div id="warning.has_error.message.alert.alert-danger">
      <ul class="warning">
        <% flash[:warning].each do |msg| -%>
          <li><%=msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= yield %>
</body>
</html>
