<!DOCTYPE html>
<html>
  <head>
    <title>Escambo de Livros</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to "Escambo de Livros", root_path, class: 'navbar-brand' %>
          </div>
          <ul class="nav navbar-nav">
            <% if signed_in? %>
              <li>
                <%= link_to 'My Advertisements', my_advertisements_path %>
              </li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
              <li>
                <%= link_to t(".sign_out"), sign_out_path, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to t(".sign_in"), sign_in_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <div class="container">
      <% if flash[:notice] %>
        <div class="message" id="notice">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:warning] %>
        <div class="has_error message" id="warning">
          <ul class="warning">
            <% flash[:warning].each do |msg| %>
              <li>
                <%= msg %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer class="footer">
      <small></small>
    </footer>
  </body>
</html>
