

<h1>My Advertisements</h1>

<%= form_tag url_for(:controller => 'advertisements', :action => 'user_advertisements'), method: 'get' do -%>
  <div class="text-field">
    <%= label_tag 'Search' %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag :search, name: nil %>
  </div>
<% end %>

<%= render 'list' %>
